@page
@model Ass02Solution_Se1705_NguyenHoangPhuc_SE173197.Pages.AgriculteCategoryManagement.CreateModel

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Tạo danh mục nông nghiệp mới trong hệ thống">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    <title>Tạo Danh Mục Nông Nghiệp</title>
    <style>
        body {
            background-color: #e8f5e9;
            color: #2e7d32;
        }

        h1, h4 {
            color: #1b5e20;
        }

        .form-container {
            background-color: #ffffff;
            border: 2px solid #81c784;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 100, 0, 0.15);
            padding: 20px;
            margin-top: 20px;
        }

        .btn-primary {
            background-color: #4caf50;
            border-color: #4caf50;
        }

            .btn-primary:hover {
                background-color: #388e3c;
                border-color: #388e3c;
            }

        .btn-secondary {
            background-color: #81c784;
            border-color: #81c784;
        }

            .btn-secondary:hover {
                background-color: #66bb6a;
                border-color: #66bb6a;
            }

        .form-label {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mt-4">CREATE NEW AGRICULTURE CATEGORY</h1>
        <h4 class="text-center">Fill all information below</h4>
        <hr />
        <div class="row">
            <div class="col-md-8 offset-md-2 form-container">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="mb-3">
                        <label asp-for="AgricultureCategory.CategoryName" class="form-label">Category Name</label>
                        <input asp-for="AgricultureCategory.CategoryName" class="form-control" />
                        <span asp-validation-for="AgricultureCategory.CategoryName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="AgricultureCategory.Description" class="form-label">Description</label>
                        <input asp-for="AgricultureCategory.Description" class="form-control" />
                        <span asp-validation-for="AgricultureCategory.Description" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a asp-page="Index" class="btn btn-secondary">Back to list</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
