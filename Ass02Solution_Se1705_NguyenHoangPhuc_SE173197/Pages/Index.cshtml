@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Agriculture Management</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom styles */
        body {
            background-color: #f5f5f5;
            color: #333;
        }

        .hero-section {
            background-color: #4CAF50;
            color: white;
            padding: 60px 0;
            text-align: center;
        }

            .hero-section h1 {
                font-size: 3rem;
                font-weight: bold;
            }

            .hero-section p {
                font-size: 1.2rem;
            }

        .btn-primary-custom {
            background-color: #388E3C;
            border-color: #388E3C;
        }

            .btn-primary-custom:hover {
                background-color: #2e7d32;
                border-color: #2e7d32;
            }

        .product-card {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }

            .product-card:hover {
                transform: scale(1.05);
            }

        .product-image {
            max-height: 200px;
            object-fit: cover;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .footer-section {
            background-color: #4CAF50;
            color: white;
            padding: 20px 0;
        }
    </style>
</head>
<body>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <h1>Welcome to Agriculture Management</h1>
            <p>Discover fresh and organic products at your fingertips.</p>
            <a href="/Login" class="btn btn-primary-custom btn-lg mt-4">Move to management page</a>
        </div>
    </section>

    <!-- Featured Products Section -->
    <section class="container py-5">
        <div class="text-center mb-5">
            <h2 class="text-success">Featured Products</h2>
            <p class="text-muted">Browse through some of our popular products.</p>
        </div>
        <div class="row g-4">
            @foreach (var product in Model.AgricultureProduct.Take(6)) // Display up to 6 products
            {
                <div class="col-md-4">
                    <div class="product-card bg-white text-center">
                        <img src="@product.Thumbnail" alt="@product.ProductName" class="product-image w-100">
                        <div class="p-4">
                            <h5 class="fw-semibold">@product.ProductName</h5>
                            <p class="text-success fw-bold">@product.Price.ToString("C")</p>
                            <p class="text-muted small">@product.Description</p>
                            <a asp-page="./DetailsProduct" asp-route-id="@product.ProductId" class="btn btn-success btn-sm mt-2">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <!-- Footer Section -->
    <footer class="footer-section text-center">
        <p class="mb-0">&copy; 2024 Agriculture Management Platform. All Rights Reserved.</p>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>